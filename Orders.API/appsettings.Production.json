{
  "ConnectionStrings": {
    "DefaultConnection": "Server=production-server;Database=OrdersDb_Prod;Trusted_Connection=false;User Id=orders-api-user;Password=****;MultipleActiveResultSets=true;TrustServerCertificate=false;Encrypt=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Error",
        "System": "Warning"
      }
    }
  },
  "ApplicationSettings": {
    "Environment": "Production",
    "ServiceUrl": "https://api.company.com/orders",
    "Features": {
      "EnableDetailedErrors": false,
      "EnableSensitiveDataLogging": false,
      "EnableSwagger": false
    },
    "Database": {
      "EnableSensitiveDataLogging": false,
      "EnableDetailedErrors": false
    }
  },
  "CORS": {
    "AllowedOrigins": [
      "https://app.company.com",
      "https://admin.company.com"
    ]
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "Authority": "https://identity.company.com",
        "RequireHttpsMetadata": true,
        "ValidateAudience": true,
        "ValidateIssuer": true
      }
    }
  },
  "RateLimiting": {
    "EnableLimiting": true,
    "GlobalRules": {
      "PermitLimit": 100,
      "Window": "00:01:00"
    }
  },
  "Kestrel": {
    "EndPoints": {
      "Https": {
        "Url": "https://*:443"
      }
    }
  }
}